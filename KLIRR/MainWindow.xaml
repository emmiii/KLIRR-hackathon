<Window x:Class="KLIRR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KLIRR"
        mc:Ignorable="d"
        Title="Krislogg" Height="550" Width="800"
        Background="AliceBlue"
        ResizeMode="NoResize"
        FontSize="14"
        FontFamily="Tahoma"
        Foreground="Black"
        WindowStartupLocation="CenterOwner"
        >
    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="DatePicker">
            <Setter Property="FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="ListView">
            <Setter Property="FontFamily" Value="Tahoma"/>
        </Style>
        <Style TargetType="GridViewColumnHeader">
            <Setter Property="FontFamily" Value="Tahoma"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="IsHitTestVisible" Value="False"/>
            <Setter Property="Background" Value="#FFEEEEEE"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="4,2"/>
        </Style>
        <Style x:Key="AlternatingRowStyle" TargetType="ListViewItem">
            <Setter Property="Background" Value="White"/>
            <Style.Triggers>
                <Trigger Property="ItemsControl.AlternationIndex" Value="1">
                    <Setter Property="Background" Value="#FFF0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="5"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5" 
                BorderBrush="#FF505050" BorderThickness="1" CornerRadius="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <ListView x:Name="Loggar" 
                          Grid.Row="0"
                          ItemsSource="{Binding LogEntriesView}" 
                          ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                          MouseDoubleClick="Loggar_MouseDoubleClick"
                          BorderThickness="0"
                          AlternationCount="2"
                          ItemContainerStyle="{StaticResource AlternatingRowStyle}">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Tid" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TidDisplay}" ToolTip="{Binding TidDisplay}" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Titel" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Titel}" ToolTip="{Binding Titel}" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Avdelning" Width="150">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Avdelning}" ToolTip="{Binding Avdelning}" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Utfall" Width="170">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Utfall}" ToolTip="{Binding Utfall}" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Header="Taggar" Width="140">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding TaggarDisplay}" ToolTip="{Binding TaggarDisplay}" TextTrimming="CharacterEllipsis"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <!-- Empty column to fill remaining space -->
                            <GridViewColumn Width="0"/>
                        </GridView>
                    </ListView.View>
                </ListView>

                <!-- Separator Line -->
                <Border Grid.Row="1" Height="1" Background="#FF505050"/>

                <!-- Filter Row -->
                <Grid Grid.Row="2" Background="#FFEEEEEE">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1.1*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Orientation="Vertical" Margin="4,4,10,4">
                        <Grid Margin="0,0,0,2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Start" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                            <DatePicker x:Name="FilterTidFrom" Grid.Column="1" SelectedDateChanged="Filter_DateChanged" ToolTip="Start datum"/>
                        </Grid>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="35"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Slut" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                            <DatePicker x:Name="FilterTidTo" Grid.Column="1" SelectedDateChanged="Filter_DateChanged" ToolTip="Slut datum"/>
                        </Grid>
                    </StackPanel>
                    <StackPanel Grid.Column="1" Orientation="Vertical" Margin="10,4">
                        <TextBlock Text="Sök Titel" Margin="0,0,0,2"/>
                        <TextBox x:Name="FilterTitel" TextChanged="Filter_TextChanged" ToolTip="Filtrera på titel"/>
                    </StackPanel>
                    <StackPanel Grid.Column="2" Orientation="Vertical" Margin="10,4">
                        <TextBlock Text="Sök Avdelning" Margin="0,0,0,2"/>
                        <TextBox x:Name="FilterAvdelning" TextChanged="Filter_TextChanged" ToolTip="Filtrera på avdelning"/>
                    </StackPanel>
                    <StackPanel Grid.Column="3" Orientation="Vertical" Margin="10,4">
                        <TextBlock Text="Sök Utfall" Margin="0,0,0,2"/>
                        <TextBox x:Name="FilterUtfall" TextChanged="Filter_TextChanged" ToolTip="Filtrera på utfall"/>
                    </StackPanel>
                    <StackPanel Grid.Column="4" Orientation="Vertical" Margin="10,4,4,4">
                        <TextBlock Text="Sök Taggar" Margin="0,0,0,2"/>
                        <TextBox x:Name="FilterTaggar" TextChanged="Filter_TextChanged" ToolTip="Filtrera på taggar"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <Button x:Name="NyLogg" Content="Ny logg" Grid.Row="2" Grid.Column="1" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Ny_Logg_Click"/> 
        <Button x:Name="Exportera" Content="Exportera" Grid.Row="2" Grid.Column="2" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Exportera_Click"/> 
        <Button x:Name="Importera" Content="Importera" Grid.Row="2" Grid.Column="3" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Importera_Click"/> 

        <StackPanel Grid.Row="2" Grid.Column="5" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,5,0">
            <Button Click="Refresh_Click" ToolTip="Uppdatera" ToolTipService.InitialShowDelay="200" Padding="8,2" Width="35" Height="25" Margin="0,0,0,6">
                <TextBlock Text="↻" FontSize="14"/>
            </Button>
            <Button Click="Installningar_Click" ToolTip="Inställningar" ToolTipService.InitialShowDelay="200" Padding="8,2" Width="35" Height="25">
                <TextBlock Text="⚙" FontSize="14"/>
            </Button>
        </StackPanel>
        
    </Grid>
</Window>
