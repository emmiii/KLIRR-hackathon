<Window x:Class="KLIRR.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KLIRR"
        mc:Ignorable="d"
        Title="Krislogg" Height="550" Width="800"
        Background="AliceBlue"
        ResizeMode="NoResize"
        FontSize="14"
        FontFamily="Tahoma"
        Foreground="Black"
        WindowStartupLocation="CenterOwner"
        >
    <Window.Resources>
        <Style TargetType="Button">
            <Style.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="8"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="0.15*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>

        <ListView x:Name="Loggar" 
                  ItemsSource="{Binding LogEntriesView}" 
                  Grid.Row="1" 
                  Grid.Column="1" 
                  Grid.ColumnSpan="5" 
                  Margin="0,0,0,0"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  MouseDoubleClick="Loggar_MouseDoubleClick">
            <ListView.Resources>
                <Style TargetType="GridViewColumnHeader">
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                    <Setter Property="Background" Value="#FFEEEEEE"/>
                    <Setter Property="Foreground" Value="Black"/>
                    <Setter Property="BorderBrush" Value="#FFCCCCCC"/>
                    <Setter Property="BorderThickness" Value="0,0,1,1"/>
                    <Setter Property="Padding" Value="4,2"/>
                </Style>
            </ListView.Resources>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Tid" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Tid}" ToolTip="{Binding Tid}" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Titel" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Titel}" ToolTip="{Binding Titel}" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Avdelning" Width="150">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Avdelning}" ToolTip="{Binding Avdelning}" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Utfall" Width="170">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Utfall}" ToolTip="{Binding Utfall}" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Taggar" Width="140">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding TaggarDisplay}" ToolTip="{Binding TaggarDisplay}" TextTrimming="CharacterEllipsis"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <!-- Empty column to fill remaining space -->
                    <GridViewColumn Width="0"/>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Filter Row -->
        <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" Orientation="Vertical" Margin="0,2,2,2">
                <Grid Margin="0,0,0,2">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Start" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <DatePicker x:Name="FilterTidFrom" Grid.Column="1" SelectedDateChanged="Filter_DateChanged" ToolTip="Start datum"/>
                </Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="35"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Slut" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,5,0"/>
                    <DatePicker x:Name="FilterTidTo" Grid.Column="1" SelectedDateChanged="Filter_DateChanged" ToolTip="Slut datum"/>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="1" Orientation="Vertical" Margin="2,2">
                <TextBlock Text="Sök Titel" Margin="0,0,0,2"/>
                <TextBox x:Name="FilterTitel" TextChanged="Filter_TextChanged" ToolTip="Filtrera på titel"/>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Vertical" Margin="2,2">
                <TextBlock Text="Sök Avdelning" Margin="0,0,0,2"/>
                <TextBox x:Name="FilterAvdelning" TextChanged="Filter_TextChanged" ToolTip="Filtrera på avdelning"/>
            </StackPanel>
            <StackPanel Grid.Column="3" Orientation="Vertical" Margin="2,2">
                <TextBlock Text="Sök Utfall" Margin="0,0,0,2"/>
                <TextBox x:Name="FilterUtfall" TextChanged="Filter_TextChanged" ToolTip="Filtrera på utfall"/>
            </StackPanel>
            <StackPanel Grid.Column="4" Orientation="Vertical" Margin="2,2,0,2">
                <TextBlock Text="Sök Taggar" Margin="0,0,0,2"/>
                <TextBox x:Name="FilterTaggar" TextChanged="Filter_TextChanged" ToolTip="Filtrera på taggar"/>
            </StackPanel>
        </Grid>

        <Button x:Name="Logga" Content="Logga" Grid.Row="3" Grid.Column="1" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Logga_Click"/> 
        <Button x:Name="Exportera" Content="Exportera" Grid.Row="3" Grid.Column="2" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Exportera_Click"/> 
        <Button x:Name="Importera" Content="Importera" Grid.Row="3" Grid.Column="3" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Importera_Click"/> 
        <Button x:Name="Inställningar" Content="Inställningar" Grid.Row="3" Grid.Column="4" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Installningar_Click"/> 
        <Button x:Name="RefreshButton" Content="Uppdatera" Grid.Row="3" Grid.Column="5" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Refresh_Click"/> 
        
    </Grid>
</Window>
